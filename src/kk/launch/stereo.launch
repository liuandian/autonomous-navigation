<launch>

  <!-- 参数：命名空间 -->
  <arg name="camera_ns" default="stereo" />

  <!-- 启动左右相机节点（你自己的相机发布节点） -->
  <!-- 假设你已经有节点发布下列话题： -->
  <!-- /stereo/left/image_raw, /stereo/right/image_raw, 以及各自的 camera_info -->

  <!-- 启动 stereo_image_proc -->
  <group ns="$(arg camera_ns)">
    <node name="stereo_proc" pkg="stereo_image_proc" type="stereo_image_proc" output="screen"/>
  </group>

  <!-- 启动 RViz 并加载配置 -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find your_package_name)/rviz/stereo_vision.rviz" />

</launch>

